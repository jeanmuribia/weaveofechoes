<form>
  <div class="sheet-container">
    <header class="sheet-header">
      <h1>{{actorName}}</h1>
    </header>

    <!-- Tabs -->
    <nav class="sheet-tabs tabs" data-group="primary-tabs">
      <a class="item" data-tab="profile">Profile</a>
      <a class="item" data-tab="relationships">Relationships</a>
      <a class="item" data-tab="biography">Biography</a>
      <a class="item" data-tab="private-notes">Private Notes</a>
    </nav>

    <!-- Tab contents -->
    <div class="tab-content">
      
<!-- Profile Tab -->
<div class="tab active" data-tab="profile">
  <!-- Profile tab content -->

   <!-- Identity section -->
  <div>
    <h2><label for="identity">Identity</label></h2>

    <!-- Actor Name -->
    <label for="actor-name" style="cursor: pointer;" id="name-label">Name:</label>
    <span id="actor-name" style="cursor: pointer; margin-left: 10px;">{{actorName}}</span>
    <input type="text" id="name-edit" name="name" value="{{actorName}}" style="display: none;" />
  </div>

  <!-- Element -->
  <div>
    <label for="element" style="cursor: pointer;" id="element-label">Element:</label>
    <span id="element-view">{{system.element.value}}</span>
    <select id="element-edit" name="element" style="display: none;">
      <option value="fire" {{#if (eq system.element.value "fire")}}selected{{/if}}>Fire</option>
      <option value="water" {{#if (eq system.element.value "water")}}selected{{/if}}>Water</option>
      <option value="earth" {{#if (eq system.element.value "earth")}}selected{{/if}}>Earth</option>
      <option value="air" {{#if (eq system.element.value "air")}}selected{{/if}}>Air</option>
      <option value="none" {{#if (eq system.element.value "none")}}selected{{/if}}>None</option>
    </select>
  </div>

  <!-- Stamina Max -->
  <div style="display: flex; align-items: center;">
    <label for="stamina-max" style="cursor: pointer;" id="stamina-label">Stamina Max:</label>
    <span id="stamina-max-view" style="margin-left: 10px;">{{system.stamina.max}}</span>
    <select id="stamina-max-edit" name="stamina-max" style="display: none;">
      <option value="1" {{#if (eq system.stamina.max "1")}}selected{{/if}}>1</option>
      <option value="2" {{#if (eq system.stamina.max "2")}}selected{{/if}}>2</option>
      <option value="3" {{#if (eq system.stamina.max "3")}}selected{{/if}}>3</option>
      <option value="4" {{#if (eq system.stamina.max "4")}}selected{{/if}}>4</option>
      <option value="5" {{#if (eq system.stamina.max "5")}}selected{{/if}}>5</option>
      <option value="6" {{#if (eq system.stamina.max "6")}}selected{{/if}}>6</option>
    </select>
  </div>

  <!-- Current Stamina -->
  <div style="display: flex; align-items: center; margin-top: 10px;">
    <label for="current-stamina">Current Stamina:</label>
    <span id="current-stamina-view" style="margin-left: 10px;">{{system.stamina.current}}</span>
    <button id="stamina-decrease" type="button" style="margin-left: 10px;">-</button>
    <button id="stamina-increase" type="button" style="margin-left: 5px;">+</button>
  </div>

  <!-- Tempers Section -->
<h2>Tempers</h2>

<!-- Fire Temper -->
<div style="display: flex; align-items: center;">
  <label id="fire-label" style="cursor: pointer;">Fire Temper:</label>
  
  <!-- Display currentValue for the temper -->
  <span id="fire-view" class="temper {{system.tempers.fire.currentValue}} clickable" style="margin-left: 10px;">
  {{toUpperCaseValue system.tempers.fire.currentValue}}
</span>

  <!-- Trauma Checkbox -->
  <input type="checkbox" id="fire-trauma" class="trauma" {{#if system.tempers.fire.wound}}checked{{/if}} style="margin-left: 10px;"> Trauma
  
  <select id="fire-edit" name="fire" style="display: none; margin-left: 10px;">
    <option value="malus" {{#if (eq system.tempers.fire.currentValue "malus")}}selected{{/if}}>Malus</option>
    <option value="neutral" {{#if (eq system.tempers.fire.currentValue "neutral")}}selected{{/if}}>Neutral</option>
    <option value="bonus" {{#if (eq system.tempers.fire.currentValue "bonus")}}selected{{/if}}>Bonus</option>
    <option value="critical" {{#if (eq system.tempers.fire.currentValue "critical")}}selected{{/if}}>Critical</option>
  </select>
</div>

<!-- Water Temper -->
