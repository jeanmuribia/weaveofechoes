<form id="actor-sheet-form">
  <h1>Character Sheet</h1>

  <div>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="{{system.name.value}}" required />
  </div>

  <div>
    <label for="element">Element:</label>
    <select id="element" name="element">
      <option value="none" {{#if (eq system.element.value "none")}}selected{{/if}}>None</option>
      <option value="Fire" {{#if (eq system.element.value "Fire")}}selected{{/if}}>Fire</option>
      <option value="Water" {{#if (eq system.element.value "Water")}}selected{{/if}}>Water</option>
      <option value="Earth" {{#if (eq system.element.value "Earth")}}selected{{/if}}>Earth</option>
      <option value="Air" {{#if (eq system.element.value "Air")}}selected{{/if}}>Air</option>
    </select>
  </div>

  <h2>Tempers</h2>

  <div>
    <label for="fire">Fire:</label>
    <select id="fire" name="temper-fire">
      <option value="malus" {{#if (eq system.tempers.fire.value "malus")}}selected{{/if}}>Malus</option>
      <option value="neutral" {{#if (eq system.tempers.fire.value "neutral")}}selected{{/if}}>Neutral</option>
      <option value="bonus" {{#if (eq system.tempers.fire.value "bonus")}}selected{{/if}}>Bonus</option>
      <option value="critique" {{#if (eq system.tempers.fire.value "critique")}}selected{{/if}}>Critical</option>
