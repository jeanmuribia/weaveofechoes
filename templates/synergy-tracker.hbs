<div class="synergy-tracker-container" style="background-color: {{color}}">
  <h2>{{title}}</h2>
  
  <div class="synergy-circle">
    <div class="synergy-controls left">
      <button id="increase-current-synergy">+</button>
      <button id="decrease-current-synergy">-</button>
    </div>
    <div class="synergy-values">
      <span class="synergy-current">{{currentSynergy}}</span>
      <span class="synergy-separator">/</span>
      <span class="synergy-max">{{maxSynergy}}</span>
    </div>
    <div class="synergy-controls right">
      <button id="increase-max-synergy">+</button>
      <button id="decrease-max-synergy">-</button>
    </div>
  </div>
  
  <div class="pool-controls">
    <button id="empty-pool">Empty Pool</button>
    <button id="fill-pool">Fill Pool</button>
    <button id="reset-max-value">Reset Max Value</button>
  </div>
  
  <div class="group-members-container">
    <h3>Group Members</h3>
    <div class="add-member-container">
      <button class="add-member">Add Members</button>
    </div>
 <div class="group-members-list">
  {{#each characters}}
    <div class="member-item-container">
      <div class="grid-container">
        <div class="member-item {{#if (lookup ../selectedCharacters this)}}selected{{/if}}" data-character="{{this}}">
          <span class="member-name">{{this}}</span>
        </div>
        <div class="eye-toggle-container">
          <div class="eye-toggle" data-character="{{this}}">
            <i class="fas fa-eye"></i>
          </div>
        </div>
        <div class="remove-member-container">
          <div class="remove-member" data-character="{{this}}">
            -
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>

  <div class="maneuver-section">
    <h3>Synergic Maneuver</h3>
    <div class="synergy-cost">
      {{#if (eq maneuverCost "Select at least 2 characters")}}
        Select at least 2 characters
      {{else}}
        Cost: {{maneuverCost}} points
      {{/if}}
    </div>
    <button id="apply-synergy-cost">Apply Cost</button>
  </div>
</div>