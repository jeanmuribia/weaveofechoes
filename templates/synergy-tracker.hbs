<div class="synergy-tracker-container">
    <div class="synergy-counter">
        <button id="increase-current-synergy" class="round-button">+</button>
        <button id="increase-max-synergy" class="round-button">+</button>
        <div class="synergy-value">
            <span id="current-synergy">{{currentSynergy}}</span> / <span id="max-synergy">{{maxSynergy}}</span>
        </div>
        <button id="decrease-current-synergy" class="round-button">-</button>
        <button id="decrease-max-synergy" class="round-button">-</button>
    </div>

    <button id="generate-synergy" class="full-width-button">Generate Max Synergy</button>

    <div class="synergy-section">
        <h3>Synergy Pool</h3>
        <div class="synergy-buttons">
            <button id="empty-pool" class="half-width-button">Empty</button>
            <button id="fill-pool" class="half-width-button">Fill</button>
        </div>
    </div>

    <div class="members-section">
        <h3>Members</h3>
        <ul class="members-list">
            {{#each groupMembers}}
                <li class="member-item" data-id="{{this.id}}">{{this.name}}</li>
            {{/each}}
        </ul>
    </div>

    <div class="synergy-section">
        <h3>Synergic Maneuver Cost</h3>
        <div id="maneuver-cost">Select at least two characters</div>
    </div>

    <button id="apply-synergy-cost" class="full-width-button">Apply Cost</button>
    <button id="reset-tracker" class="full-width-button">Reset Tracker</button>
</div>